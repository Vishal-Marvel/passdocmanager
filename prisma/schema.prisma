// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  viewPassword  String
  authenticated Boolean @default(false)
  userId         String  @unique
}

model Docuement {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  name     String
  document Bytes
}

model Password {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  key    String
  value  String
  salt   String
}
